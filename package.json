{
  "name": "Modpack-Distro-Server",
  "version": "1.0.0",
  "description": "A host/admin panel to manage your Modpack and distribute updates to your users.",
  "main": "./dist/app.js",
  "repository": "https://github.com/CartelModpack/Modpack-Distro-Server.git",
  "author": "gavinhsmith <me@gavinhsmith.com> (https://gavinhsmith.com)",
  "license": "GPL-3.0",
  "private": true,
  "pkg": {
    "outputPath": "./bin",
    "assets": "./web/**/*",
    "targets": [
      "latest-linux",
      "latest-macos",
      "latest-win"
    ]
  },
  "dependencies": {
    "@gavinhsmith/simpledatabase": "^1.0.5",
    "express": "^4.21.2",
    "express-handlebars": "^8.0.1",
    "formidable": "^3.5.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.8.1",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "clean": "rimraf ./dist ./bin ./web/public/css",
    "ts:build": "tsc",
    "ts:watch": "tsc --watch",
    "postcss:build": "postcss --verbose ./src/styles -d ./web/public/css",
    "postcss:watch": "postcss --verbose ./src/styles -d ./web/public/css --watch",
    "build": "npm-run-all clean ts:build postcss:build --print-label",
    "prepack": "npm-run-all build --print-label",
    "pack": "pkg .",
    "dev:launch": "nodemon .",
    "dev": "npm-run-all build --parallel ts:watch postcss:watch dev:launch --print-label",
    "start": "node ."
  }
}
