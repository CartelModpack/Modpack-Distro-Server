{
  "name": "Modpack-Distro-Server",
  "version": "1.0.0",
  "description": "A host/admin panel to manage your Modpack and distribute updates to your users.",
  "main": "./dist/boot.js",
  "bin": "./dist/boot.js",
  "repository": "https://github.com/CartelModpack/Modpack-Distro-Server.git",
  "author": "gavinhsmith <me@gavinhsmith.com> (https://gavinhsmith.com)",
  "license": "GPL-3.0",
  "private": true,
  "pkg": {
    "outputPath": "./bin",
    "targets": [
      "latest-linux",
      "latest-macos",
      "latest-win"
    ]
  },
  "dependencies": {
    "@gavinhsmith/simpledatabase": "^1.0.5",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.8.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "ts:build": "tsc",
    "ts:watch": "tsc --watch",
    "clear": "rimraf ./dist",
    "build": "npm-run-all clear ts:build",
    "prepack": "npm-run-all build",
    "pack": "pkg .",
    "dev:launch": "nodemon .",
    "dev": "npm-run-all build --parallel ts:watch dev:launch --print-label",
    "start": "node ."
  }
}
